@model UserProfileView
<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
        <h1 class="display-4">Thông tin cá nhân</h1>
        <p class="lead">Xin chào.</p>
    </div>
</div>

@{
    UserProfileView user = Model;
}
<!-- Begin modal change password -->
<div class="modal fade" id="smallShoes" tabindex="-1" role="dialog" aria-labelledby="modalLabelSmall" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modalLabelSmall">Thay đổi mật khẩu</h4>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Mật khẩu cũ:</label>
                        <input type="password" id="oldPass" class="form-control" name="oldPass">
                        <p style="color:red" id="oPass"></p>
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu mới:</label>
                        <input type="password" id="newPass" class="form-control" name="newPass">
                        <p style="color:red" id="nPass"></p>
                    </div>
                    <div class="form-group">
                        <label>Xác nhận mật khẩu mới:</label>
                        <input type="password" id="confirmNewPass" class="form-control" name="confirmPass">
                        <p style="color:red" id="confirm"></p>
                    </div>

                    <button class="btn btn-default" id="btnChangePass">Lưu thay đổi</button>
                </form>
            </div>

        </div>
    </div>
</div>

<!-- end modal change password -->
<!-- Begin modal order detail -->
<div class="modal fade" id="flipFlop" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modalLabel">Chi tiết đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Hình ảnh</th>
                                <th scope="col">Tên Sản phẩm</th>
                                <th scope="col">Số lượng</th>
                                <th scope="col">Giá tiền x1</th>
                                <th scope="col">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>
                                    <img src="https://via.placeholder.com/150x150" alt="product" class="img-thumbnail">
                                </td>
                                <td>Gà chiên KFC</td>
                                <td>4</td>
                                <td>20000 VND</td>
                                <td>80000 VND</td>
                            </tr>
                            <tr>
                                <th scope="row">1</th>
                                <td>
                                    <img src="https://via.placeholder.com/150x150" alt="product" class="img-thumbnail">
                                </td>
                                <td>Lẩu gà ớt hiểm</td>
                                <td>1</td>
                                <td>210000 VND</td>
                                <td>210000 VND</td>
                            </tr>
                        </tbody>
                    </table>
                    <h3 class="text-danger text-center">Tổng tiền: 290000 VND</h3>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-block btn-secondary" data-dismiss="modal">Close</button>
            </div>
            <br />
        </div>
    </div>
</div>
<!-- end modal order detail -->

<div class="container">
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Thông tin</a>
            @{
                if (user.orders != null)
                {
                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Đơn đặt hàng</a>
                }

            }
        </div>
    </nav>
    <br />
    <div class="tab-content" id="nav-tabContent">
        <!-- thong tin -->

        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
            <form asp-action="Index" asp-controller="Profile" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-6 mt-3">
                    <div class="form-group">
                        <h4 class="text-danger">Thông tin cá nhân <i class="fa fa-arrow-down"></i></h4>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Họ</label>
                        <div class="col-sm-8">
                            <input asp-for="FirstName" class=" form-control" value="@user.FirstName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Tên</label>
                        <div class="col-sm-8">
                            <input asp-for="LastName" class=" form-control" value="@user.LastName">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Địa chỉ</label>
                        <div class="col-sm-8">
                            <input asp-for="Address" class=" form-control" value="@user.Address">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Số điện thoại</label>
                        <div class="col-sm-8">
                            <input asp-for="Phone" class=" form-control" value="@user.Phone">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input asp-for="Email" class=" form-control" value="@user.Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Lưu thông tin</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#smallShoes">
                    Đổi mật khẩu
                </button>
            </form>
        </div>
        <!-- end thong tin -->
        <!-- don dat hang -->
        @{
            if (user.orders != null)
            {
                <div class="tab-pane fade ml-3 mb-3 mr-3" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">


                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label text-danger">Đơn hàng </label>
                        <div class="col-sm-9">
                            <input type="text" placeholder="Danh sách những đơn hàng mà bạn đã đặt từ hệ thống của chúng tôi" readonly class="form-control">
                        </div>
                    </div>
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Mã đơn hàng</th>
                                <th scope="col">Trạng thái</th>
                                <th scope="col">Ngày đặt</th>
                                <th scope="col">Ngày giao (dự kiến)</th>
                                <th scope="col">Tổng tiền</th>
                                <th scope="col">-</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Orders o in user.orders)
                            {
                                <tr>
                                    <th>@o.OrderId</th>
                                    <td>
                                        @{ 
                                            if (o.OrderStatus == 1)
                                            {
                                                <text> Đang chờ xử lý </text>
                                            }
                                            else if (o.OrderStatus == 2)
                                            {
                                                <text> Đang xử lý</text>
                                            }
                                            else if (o.OrderStatus == 3) {
                                                <text> Đã hủy </text>
                                            }
                                            else
                                            {
                                                <text> Hoàn thành </text>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @o.CreatedDate
                                    </td>
                                    <td>
                                        @o.CreatedDate.Value.AddDays(3);
                                    </td>
                                    <td>
                                        @o.Total
                                    </td>
                                    <td>
                                        <a href="" data-toggle="modal" data-target="#flipFlop"><i class="fa fa-eye"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            }
        }

        <!-- end don dat hang -->
    </div>
</div>
<br />
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <script>
        $("#btnChangePass").click(function (e) {
            e.preventDefault();
            let oldPass = $("#oldPass").val();
            let newPass = $("#newPass").val();
            let confirmNewPass = $("#confirmNewPass").val();
            XuLy(oldPass, newPass, confirmNewPass);
            if (XuLy(oldPass, newPass, confirmNewPass)) {
                $.ajax({
                    type: "POST",
                    url: "Profile/ChangePassword",
                    data: {
                        oldPass: oldPass,
                        newPass: newPass
                    },
                    success: function (response) {
                        if (response == "fail") {
                            $("#oPass").text("Mật khẩu cũ không đúng");
                        } else {
                            Swal.fire(
                                'Thông báo!',
                                'Thay đổi mật khẩu thành công!',
                                'success'
                            ).then(() => {
                                location.reload();
                            })
                        }
                    }
                });
            }
        })
        function XuLy(oldPass, newPass, confirmNewPass) {
            let res = true;
            
            if (newPass.length < 8) {
                res = false;
                $("#nPass").text("Mật khẩu phải có ít nhất 8 ký tự");
            }
            else {
                $("#nPass").text("");
            }
            if (confirmNewPass != newPass) {
                res = false;
                $("#confirm").text("Xác nhận mật khẩu mới không đúng");
            }
            else {
                $("#confirm").text("");
            }
            return res;
        }
    </script>
}