@{ 
    Layout = null;
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="~/css/signin.css" rel="stylesheet" />
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Đăng nhập với tư cách là thành viên</h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                     alt="">
                @{ 
                    string error=Context.Request.Query["error"];
                    if (error == "1")
                    {
                        <h4 style="text-align:center;color:red">Sai tên đăng nhập hoặc mật khẩu</h4>
                    }
                }
                        <form class="form-signin" asp-controller="Signin" asp-action="Login" method="post">
                            <input type="text" class="form-control" placeholder="Username" name="username" required autofocus>
                            <input type="password" class="form-control" placeholder="Password" name="password" required>
                            <label class="checkbox pull-left">
                                <input type="checkbox" value="remember-me">
                                Remember me
                            </label>
                            <div class="form-group text-right">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" checked="checked" id="inlineRadio1" value="customer">
                                    <label class="form-check-label" for="inlineRadio1">Khách hàng</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="employee">
                                    <label class="form-check-label" for="inlineRadio2">Nhân viên</label>
                                </div>
                            </div>
                            <hr />
                            <button class="btn btn-lg btn-primary btn-block" type="submit">
                                Sign in
                            </button>
                        </form>
            </div>
            <a href="#" class="text-center new-account">Create an account </a>
        </div>
    </div>
</div>