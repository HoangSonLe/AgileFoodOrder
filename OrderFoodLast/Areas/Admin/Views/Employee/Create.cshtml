@{
    Layout = null;
}
@using Microsoft.AspNetCore.Http;
@using OrderFoodLast.Helper
@{
    List<Employee> managers = ViewBag.managers as List<Employee>;
}

<div class="row">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">
                    <h2>Thêm mới nhân viên</h2>
                </li>
            </ol>
        </nav>
    </div>
</div>            <!-- content -->
<div class="container">
    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Họ</label>
                    <input type="text" class="form-control" placeholder="Nhập họ" name="lastName" />
                </div>
                <div class="form-group">
                    <label>Tên</label>
                    <input type="text" class="form-control" placeholder="Nhập tên" name="firstName" />
                </div>
                <div class="form-group">
                    <label>Tên đăng nhập</label>
                    <input type="text" class="form-control" placeholder="Nhập tên đăng nhập" name="userName" />
                </div>
                <div class="form-group">
                    <label>Mật Khẩu</label>
                    <input type="password" class="form-control" placeholder="Nhập mật khẩu" name="password" />
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" placeholder="Nhập địa chỉ" name="address" />
                </div>

            </div>

            <div class="col-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" placeholder="Nhập email" name="email" />
                </div>
                <div class="form-group">
                    <label>Điện thoại</label>
                    <input type="text" class="form-control" placeholder="Nhập số điện thoại" name="phone" />
                </div>
                <div class="form-group">
                    <label>Ngày sinh</label>
                    <input type="date" class="form-control" placeholder="Nhập ngày sinh" name="birthday" />
                </div>
                <div class="form-group">
                    <label>Vai trò</label>
                    <select class="form-control" name="role">
                        @{
                            LoginInfo info = Context.Session.GetObject<LoginInfo>("Info");

                        }
                        @if (info.role == 1)
                        {
                            <option value="1">Super Admin</option>
                            <option value="2">Admin</option>
                            <option value="3">Nhân Viên</option>
                        }
                        else if (info.role == 2)
                        {
                            <option value="2">Admin</option>
                            <option value="3">Nhân Viên</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Người quản lý</label>
                    <select class="form-control" name="managerId">
                        @foreach (var manager in managers)
                        {
                            <option value="@manager.EmployeeId">@manager.FirstName @manager.LastName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Trạng thái</label>
                    <select class="form-control" name="status">
                        <option selected value="1">Enable</option>
                        <option value="0">Disable</option>
                    </select>
                </div>
            </div>

            <br>
            <div class="container mt-2 mb-4">
                <button class="btn btn-success" type="submit"><i class="fas fa-save"></i> Tạo mới</button>
            </div>
        </div>
    </form>

</div>

