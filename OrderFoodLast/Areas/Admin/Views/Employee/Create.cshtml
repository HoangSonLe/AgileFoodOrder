<div class="row">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">
                    <h2>Thêm mới nhân viên</h2>
                </li>
            </ol>
        </nav>
    </div>
</div>            <!-- content -->
<div class="container">
    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Họ</label>
                    <input type="text" class="form-control" placeholder="Nhập họ" name="lastName"/>
                </div>
                <div class="form-group">
                    <label>Tên</label>
                    <input type="text" class="form-control" placeholder="Nhập tên" name="firstName"/>
                </div>
                <div class="form-group">
                    <label>Tên đăng nhập</label>
                    <input type="text" class="form-control" placeholder="Nhập tên đăng nhập" name="userName"/>
                </div>
                <div class="form-group">
                    <label>Mật Khẩu</label>
                    <input type="password" class="form-control" placeholder="Nhập mật khẩu" name="password"/>
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" placeholder="Nhập địa chỉ" name="address"/>
                </div>
                
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" placeholder="Nhập email" name="email"/>
                </div>
                <div class="form-group">
                    <label>Điện thoại</label>
                    <input type="text" class="form-control" placeholder="Nhập số điện thoại" name="phone"/>
                </div>
                <div class="form-group">
                    <label>Ngày sinh</label>
                    <input type="date" class="form-control" placeholder="Nhập ngày sinh" name="birthday"/>
                </div>
                <div class="form-group">
                    <label>Vai trò</label>
                    <select class="form-control" name="role">
                        <option selected value="1">Super Admin</option>
                        <option value="2">Nhân Viên</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Người quản lý</label>
                    <select class="form-control" name="managerId">
                        <option selected value="1">Minhlc</option>
                        <option value="2">Sonlh</option>
                        <option value="3">Kydq</option>
                        <option value="4">thanhhv</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Trạng thái</label>
                    <select class="form-control"  name="status">
                        <option selected value="1">Enable</option>
                        <option value="0">Disable</option>
                    </select>
                </div>
            </div>

            <br>
            <div class="container mt-2 mb-4">
                <button class="btn btn-success" type="submit"><i class="fas fa-save"></i> Tạo mới</button>
            </div>
        </div>
    </form>

</div>

