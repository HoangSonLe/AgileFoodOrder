@using OrderFoodLast.Areas.Admin.Models
@model IEnumerable<EmployeeView>

<table class="table table-striped">
    <thead>
        <tr style="white-space:nowrap">
            <th scope="col">#</th>
            <th scope="col">Mã nhân viên</th>
            <th scope="col">Tên nhân viên</th>
            <th scope="col">Email</th>
            <th scope="col">Điện thoại</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @{
            int cnt = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@cnt</th>
                <td>@item.EmployeeId</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-secondary"><i class="fas fa-info-circle"></i></button>
                        <button type="button" class="btn btn-secondary"><i class="fas fa-trash"></i></button>
                        <a href="" class="btn btn-secondary"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
            cnt++;
        }


    </tbody>
</table>

<!--pagination -->
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>