@model Employee
<div class="row">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">
                    <h2>Thông tin nhân viên</h2>
                </li>
            </ol>
        </nav>
    </div>
</div>            <!-- content -->
<div class="container">
    <form asp-action="Edit" data-id="@Model.EmployeeId" method="post">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Họ</label>
                    <input type="text" class="form-control" placeholder="Nhập họ" name="lastName" value="@Model.FirstName" />
                </div>
                <div class="form-group">
                    <label>Tên</label>
                    <input type="text" class="form-control" placeholder="Nhập tên" name="firstName" value="@Model.LastName" />
                </div>
                <div class="form-group">
                    <label>Tên đăng nhập</label>
                    <input type="text" class="form-control" placeholder="Nhập tên đăng nhập" name="userName" value="@Model.UserName" />
                </div>
                <div class="form-group">
                    <label>Mật Khẩu</label>
                    <input type="password" class="form-control" placeholder="Nhập mật khẩu" name="password" value="@Model.Password"/>
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" placeholder="Nhập địa chỉ" name="address" value="@Model.Address" />
                </div>

            </div>

            <div class="col-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" placeholder="Nhập email" name="email" value="@Model.Email" />
                </div>
                <div class="form-group">
                    <label>Điện thoại</label>
                    <input type="text" class="form-control" placeholder="Nhập số điện thoại" name="phone" value="@Model.Phone" />
                </div>
                <div class="form-group">
                    <label>Ngày sinh</label>
                    <input type="date" class="form-control" placeholder="Nhập ngày sinh" name="birthday" value="@Model.BirthDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="form-group">
                    <label>Vai trò</label>
                    <select class="form-control" name="role">
                        @if (Model.Role == 1)
                        {
                            <option selected value="1">Super Admin</option>
                            <option value="2">Nhân Viên</option>
                        }
                        else if(Model.Role == 2)
                        {
                            <option  value="1">Super Admin</option>
                            <option selected value="2">Nhân Viên</option>
                        }


                    </select>
                </div>
                <div class="form-group">
                    <label>Người quản lý</label>
                    <select class="form-control" name="managerId">
                        @if (Model.ManagerId == 1)
                        {
                            <option value="1">Minhlc</option>
                            <option value="2">Sonlh</option>
                            <option value="3">Kydq</option>
                            <option value="4">thanhhv</option>
                        }
                        else if (Model.ManagerId == 2)
                        {
                            <option value="1">Minhlc</option>
                            <option selected value="2">Sonlh</option>
                            <option value="3">Kydq</option>
                            <option value="4">thanhhv</option>
                        }
                        else if (Model.ManagerId == 3)
                        {
                            <option value="1">Minhlc</option>
                            <option value="2">Sonlh</option>
                            <option selected value="3">Kydq</option>
                            <option value="4">thanhhv</option>
                        }
                        else if (Model.ManagerId == 4)
                        {
                            <option value="1">Minhlc</option>
                            <option value="2">Sonlh</option>
                            <option value="3">Kydq</option>
                            <option selected value="4">thanhhv</option>
                        }

                    </select>
                </div>
                <div class="form-group">
                    <label>Trạng thái</label>
                    <select class="form-control" name="status">
                        @if (Model.Status == 1)
                        {
                            <option selected value="1">Enable</option>
                            <option value="0">Disable</option>
                        }
                        else if(Model.Status == 2)
                        {
                            <option value="1">Enable</option>
                            <option value="0">Disable</option>
                        }

                    </select>
                </div>
            </div>

            <br>
            <div class="container mt-2 mb-4">
                <button class="btn btn-success"><i class="fas fa-save"></i> Lưu thông tin</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#smallShoes">
                    Đổi mật khẩu
                </button>
            </div>
        </div>
    </form>

</div>

