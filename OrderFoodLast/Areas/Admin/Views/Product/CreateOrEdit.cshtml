@model OrderFoodLast.Models.Product
    <div class="row">
        <div class="col-5">
            <img src="~/img/@Model.ProductImage" style="height:200px;width:200px; margin:0 10px 0 -5px; border:1px solid gray; border-radius:10px;" alt="@Model.ProductImage" />
            <span asp-validation-for="ProductImage" class="text-danger"></span>
        </div>
        <div class="col-7">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label class="control-label">Tên Sản Phẩm</label>
                <input asp-for="ProductName" class="form-control" disabled />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Loại</label>
                <input asp-for="Category.Name" class="form-control" disabled />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ngày tạo</label>
                <input asp-for="CreatedDate" class="form-control" disabled />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label class="control-label">Giá</label>
                <input asp-for="Price" class="form-control" disabled />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Giá Giảm</label>
                <input asp-for="PromotionPrice" class="form-control" disabled />
                <span asp-validation-for="PromotionPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Bao gồm VAT</label>
                <input asp-for="IncludeVat" class="form-control" disabled />
                <span asp-validation-for="IncludeVat" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label class="control-label">Số Lượng</label>
                <input asp-for="Quantity" class="form-control" disabled />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tình trạng</label>
                <input asp-for="Status" class="form-control" disabled />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Lượt xem</label>
                <input asp-for="ViewCounts" class="form-control" disabled />
                <span asp-validation-for="ViewCounts" class="text-danger"></span>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label class="control-label">Mô tả</label>
                <textarea>@Model.Description</textarea>
            </div>
        </div>
    </div>
    <div>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    </div>
