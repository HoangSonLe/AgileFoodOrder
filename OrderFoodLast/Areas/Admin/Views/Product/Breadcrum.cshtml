@model IEnumerable<ProductCategory>
<div class="row">
    <div class="container" style="padding:0px">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb d-flex justify-content-end">
                <li class="breadcrumb-item active">
                    <div class="btn-group" role="group">
                        <label for="inputState" style="margin-right:10px; margin-top:auto">State</label>
                        <select id="inputState" class="form-control">
                            <option value="" selected>All</option>
                            @foreach (var p in Model)
                            {
                                    <option value="@p.MetaTitle">@p.Name</option>
                            }
                        </select>
                    </div>
                </li>
                <li class="breadcrumb-item active">
                    <div class="btn-group" role="group">
                        <input type="text" class="inputFindName" placeholder="Search by Name">
                        <button type="button" class="btn btn-outline-danger btnTimKiem">Tìm kiếm</button>
                    </div>
                </li>
                <li class="breadcrumb-item active">
                    <div class="btn-group" role="group">
                        <a href="add-product.html" class="btn btn-outline-success"><i class="fas fa-plus"></i> Thêm mới</a>
                        <a href="#" class="btn btn-outline-secondary btnRefresh"><i class="fas fa-sync-alt"></i> Làm mới</a>
                        <a href="add-product.html" class="btn btn-outline-primary"><i class="fas fa-chart-pie"></i> Thống kê</a>
                    </div>
                </li>
            </ol>
        </nav>
    </div>
</div>
